<header class="jumbotron">
  <h1 class="display-3">Eat Da Burger</h1>
  <p class="lead"> </p>
</header>


<div class="container-fluid">
  <div class="row">
    <div class="col-md">
      <h2>Burgers You Have Devoured</h2>
        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>

    <div class="col-md">
      <h2>Burgers You Want to Devour</h2>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>

<h2>Add a New Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Have You Tried This Burger Before?</label><br>
    <input type="radio" name="devoured" value="1" checked> Yum!<br>
    <input type="radio" name="devoured" value="0"> Devour it!
  </div>

  <button id="search-btn" class="btn btn-primary" type="submit"><i class="fas fa-hamburger"> Add a New Burger</i></button>
  
</form>

</div>