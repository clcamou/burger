
<img src="/assets/images/food/burger_sandwich_PNG4129.png" width="200" height="200" alt="hamburger">

<h1 class="display-3">Eat-Da-Burger</h1>

<br>
<div class="container-fluid">
  <div class="row">
    <div class="col-6">
      <h2>Burgers You Want to Devour</h2>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>
    <div class="col-6">
      <h2>Burgers You Have Devoured</h2>
        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg">
    <h2>Add a New Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <div class="form-group">
          <label for="devoured">Have You Tried This Burger Before?</label><br>
          <input type="radio" name="devoured" value="1" checked> Yes <br>
          <input type="radio" name="devoured" value="0"> No
        </div>
    
        <button id="search-btn" class="btn btn-primary" type="submit">
        <i class="fas fa-hamburger"> Add a New Burger</i></button>
  
      </form>
  </div>

</div>